# Configurações do Servidor
NODE_ENV=production
PORT=5000

# JWT Secret (use uma chave forte e única)
JWT_SECRET=sua_chave_secreta_muito_forte_aqui_pelo_menos_32_caracteres

# Database PostgreSQL (Railway/Supabase/Render fornecerá estas URLs)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Frontend URL (para CORS)
FRONTEND_URL=https://seu-app.vercel.app

# Configurações opcionais
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === CONFIGURAÇÕES LEGADAS (manter para compatibilidade) ===
# Para Vercel Postgres (Produção) - será preenchido automaticamente
POSTGRES_URL=

# Para PostgreSQL local (Desenvolvimento)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rivalis_db
DB_USER=usuario
DB_PASSWORD=senha
PORT=5000
NODE_ENV=development

# CORS - ajustar para sua URL de produção
FRONTEND_URL=http://localhost:5173