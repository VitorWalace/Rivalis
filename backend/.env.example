# Configurações do Servidor
NODE_ENV=production
PORT=5000

# JWT Secret (use uma chave forte e única)
JWT_SECRET=sua_chave_secreta_muito_forte_aqui_pelo_menos_32_caracteres

# Database MySQL (Railway/PlanetScale/AlwaysData fornecerá estas URLs)
MYSQL_URL=mysql://username:password@hostname:port/database
# ou use variáveis separadas:
DB_DIALECT=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=rivalis_db
DB_USER=usuario
DB_PASSWORD=senha
DB_SSL=false

# Frontend URL (para CORS)
FRONTEND_URL=https://seu-app.vercel.app

# Configurações opcionais
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações opcionais herdadas (mantidas para compatibilidade)
DATABASE_URL=
POSTGRES_URL=