# Configuração do banco de dados MySQL (Railway)
# Substitua pela sua URL do Railway MySQL
DATABASE_URL=mysql://usuario:senha@host:porta/nome_do_banco

# Configurações opcionais
NODE_ENV=development
PORT=5000

# JWT Secret para autenticação (gere uma chave única)
JWT_SECRET=sua_chave_secreta_aqui
DB_PASSWORD=senha
DB_SSL=false

# Frontend URL (para CORS)
FRONTEND_URL=https://seu-app.vercel.app

# Configurações opcionais
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações opcionais herdadas (mantidas para compatibilidade)
DATABASE_URL=
POSTGRES_URL=